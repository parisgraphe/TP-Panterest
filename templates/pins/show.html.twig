{% extends 'layouts/base.html.twig' %}

{% block title pin.title %}

{% block body %}
	<article>
		<h1>{{ pin.title }}</h1>
		<p>{{ pin.description }}</p>
	</article>

	<a href="{{ path('app_pins_edit', {id: pin.id}) }}">Edit</a> | 
	<a href="#" onclick="event.preventDefault(); confirm('Are you sure ?') && document.querySelector('#js-pinDeleteForm').submit()">Delete</a>
	
	<form id="js-pinDeleteForm" action="{{ path('app_pins_delete', {id: pin.id}) }}" method="post" style="display:none;">
		<input type="hidden" name="tokenCSRF" value="{{ csrf_token('pins_deletion_' ~ pin.id) }}">
		<input type="hidden" name="_method" value="DELETE">
	</form>
{% endblock %}