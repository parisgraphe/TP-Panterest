{% extends 'layouts/base.html.twig' %}

{% block title 'Reset your password' %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto">
			<h1 class="mt-5 mb-3 text-center">Reset your password</h1>

		    {% for flashError in app.flashes('reset_password_error') %}
				<div class="alert alert-danger mb-3 rounded" role="alert">{{ flashError }}</div>
			{% endfor %}

			<P class="mb-5 text-center text-muted">
				Enter your email address and we we will send you a
				link to reset your password.
			</P>
			{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<button type="submit" class="btn btn-lg btn-primary btn-block">Send password reset email</button>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}